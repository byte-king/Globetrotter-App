{
  "name": "globetrotter-challenge",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "postinstall": "prisma generate",
    "vercel-build": "prisma generate && prisma migrate deploy && (prisma db seed || echo 'Seed failed but continuing build') && next build",
    "migrate:dev": "prisma migrate dev",
    "migrate:deploy": "prisma migrate deploy",
    "db:push": "prisma db push",
    "prisma:seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts",
    "prisma:generate":"prisma generate --schema=./packages/db/schema.prisma",
    "prisma:studio": "prisma studio",
    "migrate:sqlite": "prisma migrate dev --schema=./prisma/schema.sqlitedb.prisma",
    "migrate:postgres": "prisma migrate dev --schema=./prisma/schema.prisma",
    "generate:sqlite": "prisma generate --schema=./prisma/schema.sqlitedb.prisma",
    "generate:postgres": "prisma generate --schema=./prisma/schema.prisma",
    "prisma:seed:sqlite": "ts-node -P tsconfig.seed.json prisma/seed.sqlite.ts",
    "prisma:seed:postgres": "ts-node -P tsconfig.seed.json prisma/seed.ts",
    "db:setup:sqlite": "npm run migrate:sqlite && npm run prisma:seed:sqlite",
    "db:reset:sqlite": "rm -f prisma/dev.db && npm run db:setup:sqlite",
    "netlify:build": "PRISMA_CLI_BINARY_TARGETS='darwin,darwin-arm64,debian-openssl-1.1.x' prisma generate --schema=./prisma/schema.sqlitedb.prisma && prisma migrate deploy --schema=./prisma/schema.sqlitedb.prisma && (ts-node -P tsconfig.seed.json prisma/seed.sqlite.ts || echo 'Seed failed but continuing build') && next build",
    "netlify:dev": "netlify dev"
  },
    "dependencies": {
    "@prisma/client": "^6.4.1",
    "@types/bcrypt": "^5.0.2",
    "@types/jsonwebtoken": "^9.0.9",
    "bcrypt": "^5.1.1",
    "jose": "^6.0.8",
    "jsonwebtoken": "^9.0.2",
    "next": "15.2.0",
    "prisma": "^6.4.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-icons": "^5.5.0",
    "unique-names-generator": "^4.7.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^20.17.22",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "cross-env": "^7.0.3",
    "eslint": "^9",
    "eslint-config-next": "15.2.0",
    "tailwindcss": "^4",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.3"
  },
  "prisma": {
    "seed": "ts-node --compiler-options {\"module\":\"CommonJS\"} prisma/seed.ts"
  }
}
